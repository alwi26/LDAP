<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="cds_report_status_list_view" model="ir.ui.view">
            <field name="name">cds.report.status.list.view</field>
            <field name="model">cds.report.status</field>
            <field name="arch" type="xml">
                <list string="Report Status" editable="bottom">
                    <field name="cds_name"/>
                </list>
            </field>
        </record>

        <record id="cds_report_status_action" model="ir.actions.act_window">
            <field name="name">Report Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cds.report.status</field>
            <field name="view_mode">list</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Status Report
                </p>
            </field>
        </record>

        <menuitem id="cds_report_status_menu"
                  name="Report Status"
                  action="cds_report_status_action"
                  parent="account.account_management_menu"
                  sequence="99"/>
    </data>
</odoo>
