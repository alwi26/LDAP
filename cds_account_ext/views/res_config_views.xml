<!-- file: views/res_config_settings_views.xml -->
<odoo>
    <record id="view_res_config_settings_inherit_period_date" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.my.module</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='accounting_reports']" position="after">
                <block title="Period" name="period_type">
                    <setting id="period_type">
                        <field name="period_type"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
