<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ldap installer Form View -->
    <record id="view_ldap_installer_test_form" model="ir.ui.view">
        <field name="name">res.company.ldap.form</field>
        <field name="model">res.company.ldap</field>
        <field name="inherit_id" ref="auth_ldap.view_ldap_installer_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="before">
                <header>
                    <button name="test_ldap_connection" type="object" string="Test Connection" icon="fa-television" class="btn-primary"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>
